 pipeline {
  agent any

  stages {
  
      stage ("Scan Code"){
        steps{
          withSonarQubeEnv ("sonar") {
          sh 'mvn clean package sonar:sonar'
    }
   
    stage('Build') {
      steps {
        // Run the maven build
        sh '"mvn" -Dmaven.test.failure.ignore clean install'
      }

    }
    stage('Deploy') {
      steps {
          deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://172.31.11.230:8080')], contextPath: 'myapp', war: '**/*.war'
      }
    }
  }
}
